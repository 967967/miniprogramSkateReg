.arena {
  position: relative;
  margin: auto;
  margin-top: 45rpx;
  height: 300rpx;
  width: 95%;
  border-radius: 45rpx;
  background-size: cover;
  background-position: center;
}

.arena::before {
  position: absolute;
  top: 50%;
  right: 35rpx;
  margin-top: -20rpx;
  content: "";
  height: 40rpx;
  width: 40rpx;
  border-top: solid;
  border-right: solid;
  border-color: #fff;
  z-index: 2;
  transform: rotate(45deg);
}

.arena::after {
  border-radius: 45rpx;
  position: absolute;
  top: 0;
  left: 0;
  content: "";
  background-color: #000;
  opacity: 0.3;
  z-index: 1;
  width: 100%;
  height: 100%;
}

